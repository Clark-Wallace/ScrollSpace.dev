---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Neural Link Authentication - ScrollSpace">
  <main class="min-h-screen bg-black">
    <!-- Background Particles -->
    <div id="particles-container" class="fixed inset-0 z-0"></div>
    
    <!-- Background Scanlines -->
    <div class="fixed inset-0 pointer-events-none z-10" style="background: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(0, 255, 65, 0.02) 2px, rgba(0, 255, 65, 0.02) 4px);"></div>
    
    <!-- Auth App Container -->
    <div id="auth-app" class="relative z-20 min-h-screen flex items-center justify-center p-4"></div>
  </main>
</Layout>

<script>
  import { AuthProvider } from '../../contexts/AuthContext';
  import AuthApp from '../../components/auth/AuthApp';
  import { createRoot } from 'react-dom/client';
  import React from 'react';

  // Initialize particles
  import('../../components/ScrollSpaceParticles').then(({ default: ScrollSpaceParticles }) => {
    const particlesContainer = document.getElementById('particles-container');
    if (particlesContainer) {
      const particlesRoot = createRoot(particlesContainer);
      particlesRoot.render(React.createElement(ScrollSpaceParticles));
    }
  });

  // Initialize auth app
  const authContainer = document.getElementById('auth-app');
  if (authContainer) {
    const authRoot = createRoot(authContainer);
    authRoot.render(
      React.createElement(AuthProvider, null,
        React.createElement(AuthApp)
      )
    );
  }
</script>

<style>
  body {
    background: #000;
    overflow-x: hidden;
  }
</style>