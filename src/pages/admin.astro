---
import Layout from '../layouts/Layout.astro';
import AdminPanel from '../components/AdminPanel';

// Block admin access in production/online environments
const isProduction = import.meta.env.PROD;
const isOnline = typeof window !== 'undefined' && window.location.hostname !== 'localhost' && window.location.hostname !== '127.0.0.1';

if (isProduction || isOnline) {
  return new Response('404 Not Found', { status: 404 });
}
---

<Layout title="ScrollSpace Admin" description="Theme park management console">
  <AdminPanel client:load />
</Layout>