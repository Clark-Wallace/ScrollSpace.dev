---
interface Props {
  title: string;
  zone: string;
  slug: string;
  preview: string;
  exists: boolean;
}

const { title, zone, slug, preview, exists } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
  {exists ? (
    <a href={`/projects/${slug}`} class="block">
      <h3 class="text-xl font-medium text-blue-600 hover:text-blue-800 mb-2">
        {title}
      </h3>
      <p class="text-sm text-gray-500 mb-3">Zone: {zone}</p>
      <p class="text-gray-700 line-clamp-3">{preview}</p>
    </a>
  ) : (
    <div>
      <h3 class="text-xl font-medium text-gray-400 mb-2">
        {title} <span class="text-sm">(Coming Soon)</span>
      </h3>
      <p class="text-sm text-gray-400 mb-3">Zone: {zone}</p>
    </div>
  )}
</div>